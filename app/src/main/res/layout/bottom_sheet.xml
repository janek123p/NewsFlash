<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet_root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:behavior_hideable="true"
    app:behavior_peekHeight="200dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rect_rounded"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_ruler"
            android:layout_width="0dp"
            android:layout_height="14dp"
            android:layout_marginTop="6dp"
            android:padding="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_baseline_horizontal_rule_24"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_heading"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:gravity="center"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img_ruler" />


        <ImageView
            android:id="@+id/img_thumbnail"
            android:layout_width="140dp"
            android:layout_height="90dp"
            android:layout_margin="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_heading" />

        <TextView
            android:id="@+id/txt_short_message"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_margin="10dp"
            android:gravity="left"
            android:textSize="13sp"
            app:layout_constraintLeft_toRightOf="@id/img_thumbnail"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_heading"/>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scroll_web_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img_ruler"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="gone">

            <WebView
                android:id="@+id/web_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"/>
        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>